/* pages/tabs/list/index.wxss */
.tabs {
  display: flex;
  border-bottom: 1rpx solid var(--border);
  margin-bottom: 32rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 32rpx;
  color: var(--muted-foreground);
  position: relative;
}

.tab-item.active {
  color: var(--foreground);
  font-weight: bold;
}

.indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: var(--primary);
  border-radius: 4rpx;
}

.list-item {
  background: var(--card);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.item-main {
  margin-bottom: 16rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--foreground);
  display: block;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 28rpx;
  color: var(--muted-foreground);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.meta-tag {
  background: rgba(34, 211, 238, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.meta-time {
  color: var(--muted-foreground);
}

.task-item {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid var(--muted-foreground);
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.checkbox.checked {
  background: var(--primary);
  border-color: var(--primary);
}

.line-through {
  text-decoration: line-through;
  color: var(--muted-foreground);
}

.empty-state {
  text-align: center;
  padding: 64rpx 0;
  color: var(--muted-foreground);
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 24rpx;
  color: var(--muted-foreground);
  font-size: 24rpx;
}

.text-cyan { color: var(--primary); }
