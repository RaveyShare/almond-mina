<view class="container">
  <!-- User Info -->
  <view class="profile-header">
    <image class="avatar" src="{{userInfo.avatar || userInfo.avatarUrl || '/assets/default-avatar.png'}}" mode="aspectFill"></image>
    <view class="info">
      <text class="nickname">{{userInfo.nickname || userInfo.name || '未登录用户'}}</text>
      <text class="uid">ID: {{userInfo.id || '--'}}</text>
    </view>
  </view>

  <!-- Stats Grid -->
  <view class="stats-grid">
    <view class="stat-item">
      <text class="stat-value">{{stats.memoryCount}}</text>
      <text class="stat-label">记忆条数</text>
    </view>
    <view class="stat-item">
      <text class="stat-value">{{stats.taskCount}}</text>
      <text class="stat-label">完成任务</text>
    </view>
    <view class="stat-item">
      <text class="stat-value">{{stats.days}}</text>
      <text class="stat-label">加入天数</text>
    </view>
  </view>

  <!-- Menu List -->
  <view class="menu-list">
    <view class="menu-item">
      <text>关于小杏仁</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="handleLogout">
      <text class="text-red">退出登录</text>
    </view>
  </view>
</view>
