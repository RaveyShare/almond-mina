/* pages/tabs/home/index.wxss */
.header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.logo {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
}

.welcome {
  margin-bottom: 48rpx;
}

.greeting {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 8rpx;
}

.input-card {
  background: var(--card);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
}

.toggle-container {
  display: flex;
  background: var(--muted);
  border-radius: 9999rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
}

.toggle-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 9999rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
}

.toggle-item.active {
  background: var(--primary);
  color: #000000;
  font-weight: 500;
}

.input-box {
  position: relative;
}

.textarea {
  width: 100%;
  background: var(--muted);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #ffffff;
  box-sizing: border-box;
  min-height: 200rpx;
}

.placeholder {
  color: rgba(255, 255, 255, 0.3);
}

.action-bar {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.submit-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #22d3ee 0%, #8b5cf6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.submit-btn.disabled {
  opacity: 0.5;
}

.icon-arrow {
  color: #000000;
  font-size: 40rpx;
  font-weight: bold;
}

.dashboard {
  display: flex;
  gap: 24rpx;
}

.card {
  flex: 1;
  background: var(--card);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.count {
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

.text-cyan { color: var(--primary); }
.text-violet { color: var(--secondary); }
