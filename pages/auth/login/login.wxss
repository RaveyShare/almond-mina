/* pages/auth/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100vh;
  padding: 64rpx;
  background-color: var(--background);
}

.logo-area {
  margin-top: 120rpx;
  text-align: center;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 32rpx;
  border-radius: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(34, 211, 238, 0.3);
  background: linear-gradient(135deg, #22d3ee 0%, #8b5cf6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-brain {
  width: 60%;
  height: 60%;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--foreground);
  margin-bottom: 16rpx;
}

.slogan {
  font-size: 28rpx;
  color: var(--muted-foreground);
}

.action-area {
  margin-bottom: 64rpx;
}

.login-btn {
  background: linear-gradient(135deg, #22d3ee 0%, #8b5cf6 100%);
  color: #000000;
  border-radius: 9999rpx;
  font-weight: bold;
  font-size: 32rpx;
  padding: 24rpx 0;
  width: 100%;
}

.tips {
  font-size: 24rpx;
  color: var(--muted-foreground);
  text-align: center;
  margin-top: 32rpx;
}
