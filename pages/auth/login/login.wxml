<view class="container">
  <view class="logo-area">
    <view class="logo">
      <image class="logo-brain" src="/images/brain.svg" mode="aspectFit" />
    </view>
    <view class="app-name">小杏仁</view>
    <view class="slogan">AI 成长伙伴</view>
  </view>

  <view class="action-area">
    <button 
      class="login-btn" 
      loading="{{loading}}" 
      disabled="{{loading}}" 
      bindtap="onLogin"
    >
      微信一键登录
    </button>
    <view class="tips">登录即代表同意用户协议与隐私政策</view>
  </view>
</view>
