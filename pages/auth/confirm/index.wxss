.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fafc 0%, #e2e8f0 100%);
}

.icon-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
}

.confirm-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 28rpx;
  background: linear-gradient(135deg, #22d3ee 0%, #8b5cf6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-brain {
  width: 55%;
  height: 55%;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 60rpx;
}

.info-box {
  width: 100%;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.info-item:not(:last-child) {
  border-bottom: 1rpx solid #e2e8f0;
}

.info-label {
  font-size: 28rpx;
  color: #64748b;
}

.info-value {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
}

.tips {
  margin-bottom: 60rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #f59e0b;
}

.btn-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-confirm {
  background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
  color: #ffffff;
  border: none;
}

.btn-confirm[disabled] {
  background: #94a3b8;
  color: #ffffff;
}

.btn-cancel {
  background: #ffffff;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
}

.btn-cancel[disabled] {
  color: #cbd5e1;
}
