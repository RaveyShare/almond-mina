<view class="container">
  <view class="icon-wrapper">
    <view class="confirm-logo">
      <image class="logo-brain" src="/images/brain.svg" mode="aspectFit" />
    </view>
  </view>
  
  <view class="title">扫码登录确认</view>
  <view class="subtitle">确认在网页端登录您的账号</view>
  
  <view class="info-box">
    <view class="info-item">
      <text class="info-label">登录方式</text>
      <text class="info-value">微信扫码登录</text>
    </view>
    <view class="info-item">
      <text class="info-label">登录设备</text>
      <text class="info-value">网页浏览器</text>
    </view>
  </view>
  
  <view class="tips">
    <text class="tips-text">⚠️ 请确认是本人操作</text>
  </view>
  
  <view class="btn-group">
    <button 
      class="btn btn-confirm" 
      bindtap="onConfirm" 
      loading="{{loading}}"
      disabled="{{loading || confirmed}}"
    >
      {{confirmed ? '已授权' : '确认登录'}}
    </button>
    <button 
      class="btn btn-cancel" 
      bindtap="onCancel"
      disabled="{{loading}}"
    >
      取消
    </button>
  </view>
</view>
