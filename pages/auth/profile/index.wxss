.container {
  padding: 48rpx;
  background-color: var(--background);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  margin-bottom: 64rpx;
  margin-top: 48rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--foreground);
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--muted-foreground);
}

.form-area {
  flex: 1;
}

.form-item {
  margin-bottom: 48rpx;
}

.avatar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 64rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx !important;
  height: 160rpx !important;
  border-radius: 50%;
  margin-bottom: 24rpx;
  background-color: transparent;
  position: relative;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.camera-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  background-color: var(--primary);
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 4rpx solid var(--background);
}

.label {
  font-size: 28rpx;
  color: var(--muted-foreground);
  margin-bottom: 16rpx;
  display: block;
}

.input {
  height: 96rpx;
  background: var(--muted);
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  color: var(--foreground);
}

.save-btn {
  background: linear-gradient(135deg, #22d3ee 0%, #8b5cf6 100%);
  color: #000000;
  border-radius: 9999rpx;
  font-weight: bold;
  font-size: 32rpx;
  padding: 24rpx 0;
  width: 100% !important;
  margin-bottom: 48rpx;
}
